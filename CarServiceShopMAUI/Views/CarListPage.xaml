<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CarServiceShopMAUI.Views.CarListPage"
             Title="Autók listája">
    <StackLayout Padding="10">

        <!-- Debug info -->
        <Label Text="{Binding Cars.Count, StringFormat='Betöltött autók: {0}'}" 
               FontSize="16" 
               FontAttributes="Bold"
               TextColor="Blue"/>

        <!-- Car list -->
        <CollectionView ItemsSource="{Binding Cars}"
                        SelectedItem="{Binding SelectedCar}"
                        SelectionMode="Single">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10" BackgroundColor="LightGray" Margin="5">
                        <Label Text="{Binding LicensePlate}" FontSize="18" FontAttributes="Bold"/>
                        <Label Text="{Binding Brand}" FontSize="14"/>
                        <Label Text="{Binding Model}" FontSize="14"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Load button -->
        <Button Text="Autók betöltése" 
                Command="{Binding LoadCarsCommand}"
                Margin="0,10,0,0"/>
    </StackLayout>
</ContentPage>
