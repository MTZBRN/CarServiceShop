<?xml version="1.0" encoding="UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CarServiceShopMAUI"
             xmlns:conv="clr-namespace:CarServiceShopMAUI.Converters"
             x:Class="CarServiceShopMAUI.App">
    <Application.Resources>
        <ResourceDictionary>
            <conv:NullToBoolConverter x:Key="NullToBoolConverter" />
            <Color x:Key="PrimaryColor">#445d96</Color>
            <Color x:Key="SecondaryColor">#c5d0e8</Color>
            <Color x:Key="TextColor">#000000</Color>


                    <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>